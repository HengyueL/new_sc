{
    "seed": 42,
    "continue": false,

    "log_folder": {
        "save_root": "L1-M1-P1"
    },

    "wandb":{
        "init": true,
        "project": "CIFAR-TestMarginLoss"
    },

    "dataset":{
        "name": "cifar10",
        "dataset_path": "C:\\Users\\Liang\\dataset\\Cifar10\\Clean",
        "batch_size": 128,
        "num_workers": 2,
        "num_classes": 10
    },

    "model": {
        "name": "resnet",
        "standardized_fc": false
    },

    "train":{

        "total_epochs": 100,
        "print_interval": 1000,

        "loss": {
            "name": "Margin",
            "reduction": "mean",
            "margin": 1,
            "power": 1,
            "rescale_logits": true,
            "temperature": 1
        },
        "optimizer": {
            "name": "AdamW",
            "lr": 1e-3,
            "weight_decay": 5e-4,
            "stop_lr": 1e-12
        },

        "scheduler": {
            "name": "CosineAnealing",
            "mode": null,
            "patience": null,
            "cosine_t_0": 15,
            "cosine_t_mult": 2,
            "milestones": [15, 45, 60]
        }
    },

    "comment": {
        "cifar": "/home/jusun/liang656/datasets/Cifar10/Clean",
        "imagenet": "/scratch.global/liang656/ImageNet2012"
    }
}